<Window x:Class="Shops.WpfClient.View.GetBrandAveragesRatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shops.WpfClient.Model"
        mc:Ignorable="d"
        Title="GetBrandAveragesRatingWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:GetBrandAveragesRatingViewModel/>
    </Window.DataContext>
    <Grid>
        <ListBox Grid.Column="0"  ItemsSource="{Binding BrandAverageProductRatings}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding BrandName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
