<Window x:Class="Shops.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Shops.WpfClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel.DataContext>
                <local:MainWindowViewModel/>
            </StackPanel.DataContext>
            <Button Height="30" Margin="10" Command = "{Binding ProductsCommand}" Content="Products Editor"/>
            <Button Height="30" Margin="10" Command = "{Binding BrandsCommand}" Content="Brands Editor"/>
            <Button Height="30" Margin="10" Command = "{Binding ShopsCommand}" Content="Shops Editor"/>
            <Button Height="30" Margin="10" Command = "{Binding GetBrandAveragePricesCommand}" Content="Get Brand Average Prices"/>
            <Button Height="30" Margin="10" Command = "{Binding GetBrandAveragesRatingCommand}" Content="Get BrandAverages Rating"/>
            <Button Height="30" Margin="10" Command = "{Binding GetNumberOfProductsCommand}" Content="Get Number Of Products"/>
            <Button Height="30" Margin="10" Command = "{Binding ExitCommand}" Content="Exit"/>
        </StackPanel>
    </Grid>
</Window>
